<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content />
        <meta name="author" content />
        <title>Registar - APUPU</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Custom Google font-->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <style>
        .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
.h-custom {
height: calc(90% - 73px);
}
@media (max-width: 450px) {
.h-custom {
height: 90%;
}
}
    </style>
    <body class="d-flex flex-column">
        <main class="flex-shrink-0">
            <!-- Navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                <div class="container px-5">
                    <a class="navbar-brand" href="/"><span class="fw-bolder text-primary">APUPU</span></a>
                </div>
            </nav>
            <!-- Page content-->
            <section class="vh-100">
                
                <div class="container-fluid h-custom">
                    
                  <div class="row d-flex justify-content-center align-items-center h-100">
                    
                    <div class="col-md-9 col-lg-6 col-xl-5">
                          <div id="failsaveuser" class="alert alert-danger" role="alert" style="display: none;">
                            Erro ao fazer o login. Tente novamente
                          </div>
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                        class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <p class="fw-bold mt-2 pt-1 mb-0">Entrar na conta</p>
                      <div  id="registerForm">
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                          <input type="text" id="username" class="form-control form-control-lg"
                            placeholder="Digite um nome de usuario" />
                          <label class="form-label" for="username">Nome de usuario</label>
                        </div>
              
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                          <input type="password" id="password" class="form-control form-control-lg"
                            placeholder="Digite uma palavra passe" />
                          <label class="form-label" for="password">Palavra Passe</label>
                        </div>
              
                        <div class="text-center text-lg-start mt-4 pt-2">
                          <button  onclick="getData()" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                            style="padding-left: 2.5rem; padding-right: 2.5rem;">Entrar</button>
                          <p class="small fw-bold mt-2 pt-1 mb-0">Nao tem conta? <a href="register"
                              class="link-danger">Registar</a></p>
                        </div>
              
                      </div >
                      <script>
                        function getData() {
                            const username = document.getElementById("username").value;
                            const password = document.getElementById("password").value;
                            const data = { "username":username, "password":password };
                 
                            fetch("http://localhost:3000/login", {
                                 method: "POST",
                                 headers: {
                                     "Content-Type": "application/json"
                                 },
                                 body: JSON.stringify(data)
                            })
                             .then(response => response.json())
                             .then(result => {
                                if (result.mensagem == 'sem dados'){
                                    document.getElementById("failsaveuser").style.display="block"
                                    }else{
                                        console.log(123)
                                        window.location.href = "/";
                               //     res.send({'mensagem':'dados encontrado' ,"dados": docs})
                                    }  
                             })
                            .catch(error => {
                                document.getElementById("failsaveuser").style.display="block"
                                 console.error(error);
                             });
                        };
                    </script>
                    </div>
                  </div>
                </div>
              </section>
            </section>
        </main>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
